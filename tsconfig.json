{
	"compilerOptions": {
		"target": "ESNext", // Set the target ECMAScript version
		"module": "ESNext", // Use ES modules
		"strict": true, // Enable strict type checking
		"jsx": "preserve", // Preserve JSX for React components
		"esModuleInterop": true, // Enable compatibility with CommonJS modules
		"outDir": "./dist", // Output directory for compiled JavaScript
		"rootDir": "./src", // Source directory
		"moduleResolution": "node", // Use Node.js-style module resolution
		"forceConsistentCasingInFileNames": true, // Ensure consistent file names
		"lib": [
			"DOM",
			"ESNext"
		] // List of libraries to include
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/core/content.js",
		"src/core/background.js", "contentScript.js", "b.js",
	], // Specify source files
	"exclude": [
		"node_modules"
	] // Exclude node_modules
}