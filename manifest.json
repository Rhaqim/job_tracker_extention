{
	"manifest_version": 3,
	"name": "Jobs we want",
	"version": "1.0",
	"description": "Track all the jobs applied to, track responses, and get reminders to follow up.",
	"permissions": [
		"activeTab",
		"tabs",
		"background",
		"scripting",
		"storage",
		"identity",
		"identity.email"
	],
	"action": {
		"default_icon": {
			"24": "images/icons8-chrome-24.png",
			"48": "images/icons8-chrome-48.png",
			"128": "images/icons8-chrome-128.png"
		},
		"default_popup": "src/popup.html",
		"default_title": "Jobs we want"
	},
	"icons": {
		"24": "images/icons8-chrome-24.png",
		"48": "images/icons8-chrome-48.png",
		"128": "images/icons8-chrome-128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.example.com/*", "<all_urls>"],
			"js": ["src/core/content.js"],

			"exclude_matches": ["*://*/*foo*"],
			"include_globs": ["*example.com/???s/*"],
			"exclude_globs": ["*bar*"],
			"all_frames": false,
			"match_origin_as_fallback": false,
			"match_about_blank": false,
			"run_at": "document_idle",
			"world": "ISOLATED"
		}
	],
	"background": {
		"service_worker": "src/core/background.js"
	},
	"oauth2": {
		"client_id": "yourExtensionOAuthClientIDWillGoHere.apps.googleusercontent.com",
		"scopes": ["openid", "profile", "email"]
	},
	"web_accessible_resources": [
		{
			"resources": [
				"src/popup.html",
				"src/assets/js/popup.js",
				"src/assets/css/popup.css"
			],
			"matches": ["<all_urls>"]
		},
		{
			"resources": [
				"src/auth.html",
				"src/assets/js/auth.js",
				"src/assets/css/auth.css"
			],
			"matches": ["<all_urls>"]
		}
	]
}
