{
	"manifest_version": 3,
	"name": "MIL",
	"version": "1.0",
	"description": "Track all the jobs applied to, track responses, and get reminders to follow up.",
	"permissions": [
		"activeTab",
		"tabs",
		"background",
		"scripting",
		"storage",
		"identity",
		"identity.email"
	],
	"action": {
		"default_icon": {
			"24": "images/icons8-chrome-24.png",
			"48": "images/icons8-chrome-48.png",
			"128": "images/icons8-chrome-128.png"
		},
		"default_popup": "src/popup.html",
		"default_title": "MIL"
	},
	"icons": {
		"24": "images/icons8-chrome-24.png",
		"48": "images/icons8-chrome-48.png",
		"128": "images/icons8-chrome-128.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/core/content.js"]
		}
	],
	"background": {
		"service_worker": "src/core/background.js"
	},
	"oauth2": {
		"client_id": "yourExtensionOAuthClientIDWillGoHere.apps.googleusercontent.com",
		"scopes": ["openid", "profile", "email"]
	},
	"web_accessible_resources": [
		{
			"resources": ["src/popup.html"],
			"matches": ["<all_urls>"]
		}
	]
}
